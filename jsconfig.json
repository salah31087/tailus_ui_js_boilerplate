{
    "compilerOptions": {
        /* Paths */
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@context/*": ["src/context/*"],
            "@lib/*": ["src/lib/*"],
            "@hooks/*": ["src/hooks/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"],
            "@styles/*": ["src/styles/*"],
            "@layouts/*": ["src/layouts/*"],
            "@services/*": ["src/services/*"]
        }
    },
    "include": ["src"]
}